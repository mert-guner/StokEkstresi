@{
    ViewBag.Title = "Home Page";
}

<main ng-controller="HomeController">
    <div class="container">
        <div class="form-group">
            <label for="email">Başlangıç Tarihi:</label>
            <input type="date" class="form-control" id="datetimepicker1">
        </div>
        <div class="form-group">
            <label for="pwd">Bitiş Tarihi:</label>
            <input type="date" class="form-control" id="datetimepicker2">
        </div>
        <div class="form-group">
            <label for="pwd">Arama:</label>
            <input type="text" class="form-control" id="txtSearch">
        </div>
        <div class="form-group pt-2">
            <a class="btn btn-primary" ng-click="search()"><i class="fa fa-search" aria-hidden="true"></i><span class="hidden-xs"> Listele</span></a>
        </div>
        <div class="form-group pt-2" style="float:right;">
            <a class="btn btn-success" ng-click="excel()"><i class="fa fa-search" aria-hidden="true"></i><span class="hidden-xs"> excel</span></a>
        </div>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>SiraNo</th>
                    <th>IslemTur</th>
                    <th>EvrakNo</th>
                    <th>Tarih</th>
                    <th>GirisMiktar</th>
                    <th>CikisMiktar</th>
                    <th>Stok</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in searchList">
                    <th>{{item.Id}}</th>
                    <td>{{item.ProcessType}}</td>
                    <td>{{item.DocumentNo}}</td>
                    <td>{{item.Date}}</td>
                    <td>{{item.EntryQuantity}}</td>
                    <td>{{item.OutputQuantity}}</td>
                    <td>{{item.Stock}}</td>
                </tr>

            </tbody>
        </table>
    </div>
</main>

<script src="~/Scripts/Pages/home.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>

<script src="~/Scripts/jszip.js" type="text/javascript"></script>
<script src="~/Scripts/xlsx.full.min.js" type="text/javascript"></script>
<script src="~/Scripts/FileSaver.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        var today = new Date();
        $('#datetimepicker1').datetimepicker({
            format: "DD/MM/YYYY",
            defaultDate: "01/01/" + today.getFullYear(),
            locale: "tr",
        });

        $('#datetimepicker2').datetimepicker({
            format: "DD/MM/YYYY",
            defaultDate: new Date(),
            locale: "tr",
        });

    });
</script>